<%- include('./includes/head.ejs') %>
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Employee Form</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <form class="form-horizontal" action="#">
                            <div class="form-group row">
                                <label class="control-label col-sm-3 align-self-center" for="name">Name:</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="name" name="name"
                                        placeholder="Enter full name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-sm-3 align-self-center" for="email">Email:</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" id="email" placeholder="Enter email">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-sm-3 align-self-center" for="contact">Contact:</label>
                                <div class="col-sm-9">
                                    <input type="number" class="form-control" id="contact" name="contact"
                                        placeholder="Enter contact number">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-sm-3 align-self-center" for="employeeCode">Employee
                                    Code:</label>
                                <div class="col-sm-9">
                                    <input type="number" class="form-control" id="employeeCode" name="employeeCode"
                                        placeholder="Enter contact number">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-sm-3 align-self-center" for="pwd1">File:</label>
                                <div class="col-sm-9">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="employeeFile"
                                                name="employeeFile">
                                            <label class="custom-file-label" for="employeeFile">Choose
                                                file</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="submit" class="btn bg-danger">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>